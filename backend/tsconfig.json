{
	"compilerOptions": {
		"module": "CommonJS",
		"esModuleInterop": true,
		"target": "ES2016",
		"lib": ["ES2015", "ES2016"],
		"moduleResolution": "node",
		"outDir": "dist",
		"rootDir": "src",
		"sourceMap": true,
		"skipLibCheck": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
